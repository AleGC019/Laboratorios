<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:padding="@dimen/small_padding"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_app_display"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/large_text"
        />

    <androidx.cardview.widget.CardView

        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center"


        app:cardBackgroundColor="@color/card_background"

        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text"
                android:paddingStart="@dimen/medium_padding"
                android:paddingTop="@dimen/small_padding"
                android:text="Weight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/big_padding">

                <EditText
                    android:id="@+id/weight_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:hint="70"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/super_large_text"
                    android:textColorHint="@color/text_hint"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:paddingStart="@dimen/small_padding"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text"
                    android:text="@string/kilograms_text"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <androidx.cardview.widget.CardView

        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center"


        app:cardBackgroundColor="@color/card_background"

        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text"
                android:paddingStart="@dimen/medium_padding"
                android:paddingTop="@dimen/small_padding"
                android:text="Weight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/big_padding">

                <EditText
                    android:id="@+id/height_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:hint="180"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/super_large_text"
                    android:textColorHint="@color/text_hint"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:paddingStart="@dimen/small_padding"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text"
                    android:text="@string/cm_text"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <Button

        android:id="@+id/btn_calculate"
        android:layout_width="@dimen/card_width"
        android:layout_height="45dp"
        android:layout_gravity="center"

        android:elevation="@dimen/card_elevation"

        android:backgroundTint="@color/btn_background"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_text_size"
        android:text="Calculate"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />


    <androidx.cardview.widget.CardView

        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/small_card_view"
        android:layout_gravity="center"

        app:cardBackgroundColor="@color/card_background"

        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_card_view"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_result_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text"
                android:paddingStart="@dimen/medium_padding"
                android:paddingTop="@dimen/small_padding"
                tools:text="@string/value" />

            <TextView

                android:id="@+id/txt_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text_size"
                android:paddingStart="@dimen/medium_padding"
                android:paddingTop="@dimen/small_padding"
                tools:text="@string/status_value" />

            <TextView
                android:id="@+id/info_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size"
                android:paddingStart="@dimen/medium_padding"
                android:paddingTop="@dimen/small_padding"
                tools:text="@string/info_value"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>
